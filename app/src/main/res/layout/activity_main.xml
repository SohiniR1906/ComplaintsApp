<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-light"
        android:text="Indian Oil Corporation Ltd."
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_complaint"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/company_name"
        android:layout_margin="25dp"
        android:layout_centerHorizontal="true"
        android:text="Sign in to file a Complaint"/>

    <Button
        android:id="@+id/button_signup"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/button_complaint"
        android:layout_centerHorizontal="true"
        android:text="Sign up to file a Complaint"/>

    <Button
        android:id="@+id/button_admin"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/button_signup"
        android:layout_margin="25dp"
        android:layout_centerHorizontal="true"
        android:text="Sign in as Admin"/>



</RelativeLayout>
