<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        android:fontFamily="sans-serif-black"
        android:text="Hello! Please enter your details!"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/edit_text_nameSignup"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name of Employee"/>

    <EditText
        android:id="@+id/edit_text_emailSignup"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email of Employee"/>

    <EditText
        android:id="@+id/edit_text_machineNo"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Machine number of Employee"/>

    <EditText
        android:id="@+id/edit_text_passwordSignup"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:inputType="numberPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Create password"/>

    <Button
        android:id="@+id/button_signUp_complaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="100dp"
        android:text="SignUp for Complaint"/>




</LinearLayout>